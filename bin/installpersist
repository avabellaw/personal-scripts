#!/bin/bash

PACKAGE=$1

if [[ $# -le 0 ]]; then 
    echo "No arguments given"
    exit 1
fi

if [[ "$@*" == *"-y"* ]]; then 
    AUTO_Y="-y"
fi

sudo apt install $PACKAGE $AUTO_Y 

if [[ $? -eq 0 ]]; then 
    if grep -c $PACKAGE ~/.saved-packages -eq 0; then
        echo "$PACKAGE" >> ~/.saved-packages
    else
        echo "Already saved."
    fi
else
    echo "$PACKAGE not saved."
fi